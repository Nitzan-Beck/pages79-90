<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/billEditText"
        android:layout_width="291dp"
        android:layout_height="49dp"
        android:layout_marginTop="60dp"
        android:hint="Bill Total"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Percent10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="10%"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/Percent15"
        app:layout_constraintHorizontal_bias="0.58"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/billEditText" />

    <TextView
        android:id="@+id/Percent15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="60dp"
        android:text="15%"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/Percent20"
        app:layout_constraintTop_toBottomOf="@+id/billEditText" />

    <TextView
        android:id="@+id/Percent20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="60dp"
        android:text="20%"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/billEditText" />

    <TextView
        android:id="@+id/Tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="Tip:"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.056"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Percent10" />

    <EditText
        android:id="@+id/tip10EditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:cursorVisible="false"
        android:focusable="false"
        android:longClickable="false"
        android:hint="10% Tip"
        android:inputType="number"
        app:layout_constraintEnd_toStartOf="@+id/tip15EditText"
        app:layout_constraintHorizontal_bias="0.426"
        app:layout_constraintStart_toEndOf="@+id/Tip"
        app:layout_constraintTop_toBottomOf="@+id/Percent10" />

    <EditText
        android:id="@+id/tip15EditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="32dp"
        android:cursorVisible="false"
        android:focusable="false"
        android:longClickable="false"
        android:hint="15% Tip"
        android:inputType="number"
        app:layout_constraintEnd_toStartOf="@+id/tip20EditText"
        app:layout_constraintTop_toBottomOf="@+id/Percent15" />

    <EditText
        android:id="@+id/tip20EditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="16dp"
        android:cursorVisible="false"
        android:focusable="false"
        android:longClickable="false"
        android:hint="20% Tip"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Percent20" />

    <TextView
        android:id="@+id/Total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="Total:"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/total10EditText"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Tip"
        app:layout_constraintTop_toBottomOf="@+id/Tip" />

    <EditText
        android:id="@+id/total15EditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="20dp"
        android:cursorVisible="false"
        android:focusable="false"
        android:longClickable="false"
        android:hint="15% Total"
        android:inputType="number"
        app:layout_constraintEnd_toStartOf="@+id/total20EditText"
        app:layout_constraintTop_toBottomOf="@+id/tip15EditText" />

    <EditText
        android:id="@+id/total20EditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="8dp"
        android:cursorVisible="false"
        android:focusable="false"
        android:longClickable="false"
        android:hint="20% Total"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/tip20EditText"
        app:layout_constraintTop_toBottomOf="@+id/tip20EditText" />

    <EditText
        android:id="@+id/total10EditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="16dp"
        android:cursorVisible="false"
        android:focusable="false"
        android:longClickable="false"
        android:hint="10% Total"
        android:inputType="number"
        app:layout_constraintEnd_toStartOf="@+id/total15EditText"
        app:layout_constraintTop_toBottomOf="@+id/tip10EditText" />

    <SeekBar
        android:id="@+id/customSeekBar"
        android:layout_width="186dp"
        android:layout_height="30dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="100dp"
        android:indeterminate="false"
        android:max="100"
        android:progress="563"
        android:progressTint="#062575"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/total15EditText" />

    <TextView
        android:id="@+id/Custom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Custom:"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/customSeekBar"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Total" />

    <TextView
        android:id="@+id/TextViewTipCustom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="88dp"
        android:text="Tip:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/Custom"
        app:layout_constraintTop_toBottomOf="@+id/Custom" />

    <TextView
        android:id="@+id/customTotalTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="16dp"
        android:text="Total:"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/totalCustomEditText"
        app:layout_constraintTop_toBottomOf="@+id/customSeekBar" />

    <EditText
        android:id="@+id/tipCustomEditText"
        android:layout_width="92dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="false"
        android:inputType="number"
        android:longClickable="false"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/customTotalTextView"
        app:layout_constraintHorizontal_bias="0.372"
        app:layout_constraintStart_toEndOf="@+id/TextViewTipCustom"
        app:layout_constraintTop_toBottomOf="@+id/customSeekBar" />

    <EditText
        android:id="@+id/totalCustomEditText"
        android:layout_width="92dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="8dp"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="false"
        android:inputType="number"
        android:longClickable="false"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/customTipTextView"
        app:layout_constraintTop_toBottomOf="@+id/customSeekBar" />

    <TextView
        android:id="@+id/customTipTextView"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_marginTop="52dp"
        android:text="tip:"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.413"
        app:layout_constraintStart_toEndOf="@+id/customSeekBar"
        app:layout_constraintTop_toBottomOf="@+id/total20EditText" />

</androidx.constraintlayout.widget.ConstraintLayout>